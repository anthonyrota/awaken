{
    "name": "root",
    "private": true,
    "devDependencies": {
        "@commitlint/cli": "9.0.1",
        "@commitlint/config-conventional": "9.0.1",
        "@types/jest": "26.0.4",
        "@types/node": "14.0.20",
        "@types/rimraf": "3.0.0",
        "@typescript-eslint/eslint-plugin": "3.6.0",
        "@typescript-eslint/parser": "3.6.0",
        "commitizen": "4.1.2",
        "cz-conventional-changelog": "3.2.0",
        "eslint": "7.4.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-import-resolver-typescript": "2.0.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.18.0",
        "husky": "4.2.5",
        "jest": "26.1.0",
        "jest-each": "26.1.0",
        "jest-extended": "0.11.5",
        "lerna": "3.22.1",
        "microbundle": "0.12.2",
        "npm-run-all": "4.1.5",
        "prettier": "2.0.5",
        "rimraf": "3.0.2",
        "standard-version": "8.0.0",
        "ts-jest": "26.1.1",
        "typescript": "3.9.6"
    },
    "scripts": {
        "build": "lerna run clean:prebuild && lerna run build",
        "clean": "npm run clean:coverage && lerna run clean",
        "clean:coverage": "rimraf coverage",
        "test": "npm run clean:coverage && jest --runInBand --coverage --watchAll=false",
        "test:build": "npm run test && npm run build && jest --runInBand --config ./jest.config.build.js",
        "lint": "eslint . && prettier --list-different .",
        "typecheck": "tsc --noEmit",
        "cz": "git-cz"
    }
}
