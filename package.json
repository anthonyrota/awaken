{
    "name": "awakening",
    "amdName": "awakening",
    "version": "0.0.1",
    "private": true,
    "description": "A fast and extremely lightweight reactive programming library for Typescript",
    "source": "src/index.ts",
    "main": "dist/awakening.js",
    "module": "dist/awakening.module.js",
    "umd:main": "dist/awakening.umd.js",
    "unpkg": "dist/awakening.umd.js",
    "jsdelivr": "dist/awakening.umd.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "keywords": [
        "awakening",
        "reactive",
        "callbag",
        "callback",
        "observables",
        "observable",
        "iterable",
        "stream",
        "es6",
        "es2015"
    ],
    "author": "Anthony Rota",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anthonyrota/awakening.git"
    },
    "bugs": "https://github.com/anthonyrota/awakening/issues",
    "homepage": "https://github.com/anthonyrota/awakening#readme",
    "sideEffects": "false",
    "exports": {
        ".": {
            "browser": "./dist/awakening.module.js",
            "umd": "./dist/awakening.umd.js",
            "import": "./dist/awakening.mjs",
            "require": "./dist/awakening.js"
        },
        "./testing": {
            "browser": "./testing/dist/testing.module.js",
            "umd": "./testing/dist/testing.umd.js",
            "require": "./testing/dist/testing.js",
            "import": "./testing/dist/testing.mjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "src",
        "dist",
        "testing/index.ts",
        "testing/dist",
        "testing/package.json"
    ],
    "scripts": {
        "build": "npm-run-all --parallel build:*",
        "build:core": "npm run clean:core && microbundle build --raw --tsconfig tsconfig.build.core.json && node ./postbuildCore.js",
        "build:testing": "npm run clean:testing && microbundle build --raw --cwd testing --tsconfig tsconfig.build.testing.json && node ./postbuildTesting.js",
        "clean": "npm-run-all --parallel clean:*",
        "clean:tmp": "rimraf tmp",
        "clean:coverage": "rimraf coverage",
        "clean:core": "rimraf dist",
        "clean:testing": "rimraf testing/dist",
        "test": "npm run test:source && npm run build && npm run test:build",
        "test:clean": "npm run test; npm run clean:core && npm run clean:testing",
        "test:source": "jest --runInBand",
        "test:source:watch": "jest --watch --runInBand",
        "test:coverage": "jest --coverage --runInBand",
        "test:build": "jest --runInBand --config jest.config.build.js",
        "test:both": "npm run test:source && npm run test:build",
        "lint": "eslint .",
        "cz": "git-cz",
        "release": "standard-version"
    },
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.18",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "commitizen": "^4.1.2",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.18.0",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-each": "^26.1.0",
        "jest-extended": "^0.11.5",
        "microbundle": "^0.12.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "standard-version": "^8.0.0",
        "ts-jest": "^26.1.1",
        "typescript": "^3.9.6"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm test",
            "pre-push": "npm run lint && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
