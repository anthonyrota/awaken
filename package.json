{
    "name": "awakening",
    "amdName": "awakening",
    "version": "0.0.1",
    "private": true,
    "description": "A tiny and fast push stream library for TypeScript",
    "source": "src/index.ts",
    "main": "dist/awakening.js",
    "module": "dist/awakening.module.js",
    "umd:main": "dist/awakening.umd.js",
    "unpkg": "dist/awakening.umd.js",
    "types": "dist/awakening.d.ts",
    "license": "MIT",
    "keywords": [],
    "dependencies": {},
    "exports": {
        ".": {
            "browser": "./dist/awakening.module.js",
            "umd": "./dist/awakening.umd.js",
            "import": "./dist/awakening.mjs",
            "require": "./dist/awakening.js"
        },
        "./testing": {
            "browser": "./testing/dist/testing.module.js",
            "umd": "./testing/dist/testing.umd.js",
            "require": "./testing/dist/testing.js",
            "import": "./testing/dist/testing.mjs"
        },
        "./package.json": "./package.json"
    },
    "sideEffects": "false",
    "devDependencies": {
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.18",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.18.0",
        "jest": "^26.1.0",
        "jest-each": "^26.1.0",
        "jest-extended": "^0.11.5",
        "microbundle": "^0.12.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.1.1",
        "typescript": "^3.9.6"
    },
    "scripts": {
        "build": "npm run clean && npm-run-all --parallel build:core build:testing",
        "build:core": "microbundle build --raw",
        "build:testing": "microbundle build --raw --cwd testing",
        "postbuild": "node ./postbuild.js",
        "dev": "microbundle watch --raw --format cjs",
        "clean": "rimraf coverage tmp dist testing/dist",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "npm run test:source && npm run build && npm run test:build",
        "test:clean": "npm run test && npm run clean",
        "test:source": "jest --runInBand",
        "test:source:watch": "jest --watch --runInBand",
        "test:source:coverage": "jest --coverage --runInBand",
        "test:build": "jest --runInBand --config jest.config.build.js",
        "test:both": "npm run test:source && npm run test:build"
    }
}
