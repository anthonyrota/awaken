{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "importHelpers": true,
        "jsx": "react",
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "lib": ["esnext", "dom"],
        "types": ["jest-extended", "node"],
        "paths": {
            "@awaken/core": ["packages/core/src/index.ts"],
            "@awaken/testing": ["packages/testing/src/index.ts"]
        }
    },
    "include": [
        "packages/core/src/**/*",
        "packages/core/test/**/*",
        "packages/core/postbuild.js",
        "packages/testing/src/**/*",
        "packages/testing/test/**/*",
        "packages/testing/postbuild.js",
        "script/**/*",
        "jest.config.js",
        "jest.config.build.js",
        "prettier.config.js"
    ]
}
