{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "importHelpers": true,
        "jsx": "react",
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "lib": ["esnext", "dom"],
        "types": ["jest-extended"],
        "paths": {
            "awakening": ["./src/index.ts"],
            "awakening/testing": ["./testing/index.ts"]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "testing/index.ts",
        "testing/test/**/*",
        "postbuild**"
    ],
    "exclude": ["dist", "testing/dist"]
}
